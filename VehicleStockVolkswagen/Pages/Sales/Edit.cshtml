@page "{id:int}"
@model VehicleStockVolkswagen.Pages.Sales.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Change Vehicle Stock</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Vehicle.ID" />
            <div class="form-group">
                <label asp-for="Vehicle.Make" class="control-label"></label>
                <input asp-for="Vehicle.Make" class="form-control" readonly/>
                <span asp-validation-for="Vehicle.Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Model" class="control-label"></label>
                <input asp-for="Vehicle.Model" class="form-control" readonly/>
                <span asp-validation-for="Vehicle.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Body" class="control-label"></label>
                <input asp-for="Vehicle.Body" class="form-control" readonly/>
                <span asp-validation-for="Vehicle.Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Engine" class="control-label"></label>
                <input asp-for="Vehicle.Engine" class="form-control" readonly/>
                <span asp-validation-for="Vehicle.Engine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Gear" class="control-label"></label>
                <input asp-for="Vehicle.Gear" class="form-control" readonly/>
                <span asp-validation-for="Vehicle.Gear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Stock" class="control-label"></label>
                <input asp-for="Vehicle.Stock" class="form-control" />
                <span asp-validation-for="Vehicle.Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Price" class="control-label"></label>
                <input type="text" asp-for="Vehicle.Price" class="form-control" readonly/>
                <span asp-validation-for="Vehicle.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to Stock</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
